<%= render 'users/user_info', user: @user, book: @book %>

<h2>Books</h2>

<% @books.each do |book| %>
  <div>
    <%= attachment_image_tag @user, :profile_image_id %>
    <p>
      title：
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
    </p>

    <P>Opinion：<%= book.body %></P>
  </div>
<% end %>

