<h2>User info</h2>

<% if @user.errors.any? %>
  <h3>
    <%= @user.errors.count %>error prohibited this obj from being saved:
  </h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
  </ul>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>

  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "60x60", fallback: "no_image.jpg"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文"%>

  <%= f.submit "Update User" %>
<% end %>